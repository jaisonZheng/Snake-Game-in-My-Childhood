{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "snake",
            "type": "shell",
            "command": "g++",
            "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${workspaceFolder}\\src\\*.cpp",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "-lgraphics64",
            "-luuid",
            "-lmsimg32",
            "-lgdi32",
            "-limm32",
            "-lole32",
            "-loleaut32",
            "-lwinmm",
            "-lgdiplus",
            "-finput-charset=utf-8",
            "-fexec-charset=gb2312"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
    ]
}